		<!-- START: Our source bundle -->
		<dependency>
			<groupId>com.notehive.osgi.hibernate-samples</groupId>
			<artifactId>hibernate-session</artifactId>
			<version>1.0.0.SNAPSHOT</version>
		</dependency>
		<!-- END: Our source bundle -->
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<version>1.4.0</version>
				<configuration>
					<instructions>
						<_include>-osgi.bnd</_include>
					</instructions>
				</configuration>
			</plugin>		
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<tasks>
								<!--  
									Copy manifest file to a location where it can  
									be found by Eclipse plugins.
								-->
								<copy todir="META-INF">
									<fileset
										dir="target/classes/META-INF" />
								</copy>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!--  plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
